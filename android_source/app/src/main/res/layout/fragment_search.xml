<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context="com.project.barcodechecker.fragments.SearchFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/img_icon_search_frag_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search_black_24dp"
            android:tint="@color/color_white" />

        <EditText
            android:id="@+id/edt_search_frag_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_icon_search_frag_search"
            android:layout_alignTop="@id/img_icon_search_frag_search"
            android:layout_toEndOf="@id/img_icon_search_frag_search"
            android:background="@color/color_transparent"
            android:backgroundTint="@color/color_white"
            android:inputType="text"
            android:textColor="@color/color_white"
            android:textCursorDrawable="@null" />

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rcv_search_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
