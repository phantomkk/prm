<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.project.barcodechecker.activities.DetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/img_product_detail_atv"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_shopping_cart_black_24dp" />

                    <TextView
                        android:id="@+id/txt_name_detail_atv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:text="name"
                        android:textStyle="bold"
                        android:textColor="@color/colorAccent"
                        android:textSize="25dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                style="@style/lbl_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="@integer/left_side_detail_atv"
                                android:text="@string/lbl_price" />

                            <TextView
                                android:id="@+id/txt_price_detail_atv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="@integer/right_side_detail_atv"
                                android:textAlignment="center"
                                android:textSize="25dp"
                                android:text="0đ" />
                        </LinearLayout>
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:background="@color/color_blue_grey_300" />
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_number_of_rating"
                                style="@style/lbl_style"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="@integer/left_side_detail_atv"
                                android:text="@string/lbl_rating" />

                            <RatingBar
                                android:id="@+id/rbar_star"
                                style="@style/Base.Widget.AppCompat.RatingBar.Indicator"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleX="0.9"
                                android:scaleY="0.9"
                                android:isIndicator="false"
                                android:theme="@style/RatingBar"
                                android:numStars="5" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="@string/lbl_code" />

                        <TextView
                            android:id="@+id/txt_code_detail_atv"
                            style="@style/value_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/right_side_detail_atv"
                            android:text="code" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="@string/lbl_company" />

                        <TextView
                            android:id="@+id/txt_company_detail_atv"
                            style="@style/value_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/right_side_detail_atv"
                            android:text="hello" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="@string/lbl_category" />

                        <TextView
                            android:id="@+id/txt_category_detail_atv"
                            style="@style/value_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/right_side_detail_atv"
                            android:text="hello" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="@string/lbl_contact" />

                        <TextView
                            android:id="@+id/txt_contact_detail_atv"
                            style="@style/value_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/right_side_detail_atv"
                            android:text="rating" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="@string/lbl_email" />

                        <TextView
                            android:id="@+id/txt_email_detail_atv"
                            style="@style/value_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/right_side_detail_atv"
                            android:text="email" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="@string/lbl_addresss" />

                        <TextView
                            android:id="@+id/txt_address_detail_atv"
                            style="@style/value_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/right_side_detail_atv"
                            android:text="address" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="@string/lbl_description" />

                        <TextView
                            android:id="@+id/txt_description_detail_atv"
                            style="@style/value_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@integer/right_side_detail_atv"
                            android:text="hello" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="Nơi bán:"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_add_sale"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/button_accent"
                            android:text="Thêm nơi bán"
                            android:textColor="@color/color_white"
                            android:textSize="10dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/linearAdd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <android.support.design.widget.TextInputLayout
                            android:id="@+id/priceWrapper"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <EditText
                                android:id="@+id/edt_price_sale"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:drawableLeft="@drawable/ic_price"
                                android:hint="0đ"
                                android:inputType="number"
                                android:maxLines="1"
                                android:textColorHint="@color/color_grey_500"
                                android:textSize="15dp" />
                        </android.support.design.widget.TextInputLayout>

                        <ImageButton
                            android:id="@+id/add_price"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:background="@drawable/ic_action_add_sale"
                            android:tint="@color/colorAccent" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/color_blue_grey_300" />

                    <ProgressBar
                        android:id="@+id/process_sale"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="20dp"
                        android:minHeight="20dp"
                        android:visibility="gone" />

                    <FrameLayout
                        android:id="@+id/frm_sale_product"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="Bình luận:"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/color_blue_grey_300" />

                    <ProgressBar
                        android:id="@+id/process_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="20dp"

                        android:minHeight="20dp"
                        android:visibility="gone" />

                    <FrameLayout
                        android:id="@+id/frm_comment_detail_atv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <TextView
                            style="@style/lbl_style"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_weight="@integer/left_side_detail_atv"
                            android:text="Gợi ý:"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/color_blue_grey_300" />

                    <ProgressBar
                        android:id="@+id/process_suggest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="20dp"
                        android:minHeight="20dp"
                        android:visibility="gone" />

                    <FrameLayout
                        android:id="@+id/frm_suggest"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
