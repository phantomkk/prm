<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_avatar_item_cmt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_shopping_cart_black_24dp"
        android:layout_marginEnd="5dp"
        />

    <TextView
        android:id="@+id/txt_name_item_cmt"
        style="@style/value_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_toEndOf="@+id/img_avatar_item_cmt"
        android:text="name" />

    <TextView
        android:id="@+id/txt_content_item_cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_name_item_cmt"
        android:layout_toEndOf="@id/img_avatar_item_cmt"
        android:text="Ungws dungj cui bap, san pham xai gi dau toan bi loi khong udng su that, gia ca gi dau chan qua, noi chung la quan cha co cai gi car"
        android:textColor="@color/color_blue_grey_800" />

    <TextView
        android:id="@+id/txt_date_item_cmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_content_item_cmt"
        android:layout_toEndOf="@id/img_avatar_item_cmt"
        android:text="20/10/2013 22:20"
        android:textSize="12sp"
        android:textColor="@color/color_blue_grey_300" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/txt_date_item_cmt"
        android:background="@color/color_blue_grey_100"
        />
</RelativeLayout>
