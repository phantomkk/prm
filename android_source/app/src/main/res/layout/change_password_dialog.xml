<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/text_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đổi Mật Khẩu"
                android:textAlignment="center"
                android:textColor="@color/color_grey_500"
                android:textSize="25dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật Khẩu Hiện Tại"
                android:textColor="@color/color_grey_500" />

            <EditText
                android:id="@+id/currtent_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/progressBar_current"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/current_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu hiện tại không đúng"
                android:textColor="@color/color_red_a700"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Mật Khẩu Mới"
                android:textColor="@color/color_grey_500" />

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/progressBar_new"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/new_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mật khẩu mới không được để trống"
                android:textColor="@color/color_red_a700"
                android:visibility="gone" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lặp Lại Mật Khẩu"
                android:textColor="@color/color_grey_500" />

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:inputType="textPassword"
                android:textSize="15dp" />

            <ProgressBar
                android:id="@+id/progressBar_confirm"
                style="@android:style/Widget.Material.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:max="100"
                android:progress="0" />

            <TextView
                android:id="@+id/confirm_password_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lặp lại mật khẩu không trùng khớp"
                android:textColor="@color/color_red_a700"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorAccent"
                android:text="Đồng Ý"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>